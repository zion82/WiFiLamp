{
 "configs": [
  "config.setup.json"
 ],
 "title": [
  {
   "type": "text",
   "title": "Настройки пользователя"
  }
 ],
 "class": "col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content": [
  {
   "type": "h5",
   "title": "{{SSDP}}",
   "class": "alert-warning"
  },
  {
   "type": "link",
   "title": "Главная",
   "action": "/",
   "class": "btn btn-block btn-danger"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "random",
   "title": "Режим Random",
   "style": "font-size:20px",
   "state": "{{random_on}}",
   "action": "random_on?random_on=[[random]]"
  },
  {
   "type": "button",
   "title": "Сброс настроек эффектов в исходные",
   "action": "eff_reset",
   "class": "btn btn-block btn-primary"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "favorit_only",
   "title": "Кнопкой - только эффекты, выбранные в Цикле",
   "style": "font-size:20px",
   "state": "{{favorit}}",
   "action": "favorit?favorit=[[favorit_only]]"
  },
  {
   "type": "hr"
  },
  {
   "type": "h4",
   "title": "Текст бегущей строки"
  },
  {
   "type": "input",
   "title": "run_text",
   "name": "run_text",
   "state": "{{run_text}}",
   "style": "width:50%;display:inline",
   "pattern": ".{1,42}"
  },
  {
   "type": "button",
   "title": "Сохранить",
   "action": "run_text?run_text=[[run_text]]",
   "class": "btn btn-block btn-success",
   "style": "width:50%;display:inline"
  },
  {
   "type": "hr"
  },
  {
   "type": "h4",
   "title": "Периодичность вывода времени бегущей строкой 0-60 мин. 0 - не выводить время"
  },
  {
   "type": "input",
   "title": "Вывод времени",
   "name": "print_time",
   "state": "{{print_time}}",
   "style": "width:30%;display:inline",
   "pattern": "[0-9]{1,2}"
  },
  {
   "type": "button",
   "title": "Сохранить",
   "class": "btn btn-block btn-success",
   "style": "width:70%;display:inline",
   "action": "print_time?print_time=[[print_time]]"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "time_always",
   "title": "Выводить время на выключенной лампе",
   "style": "font-size:20px",
   "state": "{{time_always}}",
   "action": "time_always?time_always=[[time_always]]"
  },
  {
   "type": "h4",
   "title": "Час перехода на ночное время 0-23",
   "style": "display:nextline;float:left;"
  },
  {
   "type": "input",
   "title": "Ночное время",
   "name": "night_time",
   "state": "{{night_time}}",
   "style": "display:nextline;",
   "pattern": "[0-9]{1,2}"
  },
  {
   "type": "h4",
   "title": "Яркость в ночное время 1-255",
   "style": "display:nextline;float:left;"
  },
  {
   "type": "input",
   "title": "Ночная яркость",
   "name": "night_bright",
   "state": "{{night_bright}}",
   "style": "display:nextline;",
   "pattern": "[0-9]{1,3}"
  },
  {
   "type": "h4",
   "title": "Час перехода на дневное время 0-23",
   "style": "display:nextline;float:left;"
  },
  {
   "type": "input",
   "title": "Дневное время",
   "name": "day_time",
   "state": "{{day_time}}",
   "style": "display:nextline;",
   "pattern": "[0-9]{1,2}"
  },
  {
   "type": "h4",
   "title": "Яркость в дневное время 1-255",
   "style": "display:nextline;float:left;"
  },
  {
   "type": "input",
   "title": "Дневная яркость",
   "name": "day_bright",
   "state": "{{day_bright}}",
   "style": "display:nextline;",
   "pattern": "[0-9]{1,3}"
  },
  {
   "type": "button",
   "title": "Сохранить",
   "class": "btn btn-block btn-success",
   "action": "night_time?night_time=[[night_time]]&night_bright=[[night_bright]]&day_time=[[day_time]]&day_bright=[[day_bright]]"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "button_on",
   "title": "Кнопка активирована",
   "style": "font-size:20px",
   "state": "{{button_on}}",
   "action": "button_on?button_on=[[button_on]]"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "effect_always",
   "title": "Не включать после обесточивания",
   "style": "font-size:20px",
   "state": "{{effect_always}}",
   "action": "effect_always?effect_always=[[effect_always]]"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "timer5h",
   "title": "Автовыключение через 5 часов",
   "style": "font-size:20px",
   "state": "{{timer5h}}",
   "action": "timer5h?timer5h=[[timer5h]]"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "theme",
   "title": "Темная тема",
   "style": "font-size:20px",
   "state": "{{tm}}",
   "action": "tm?tm=[[theme]]",
   "response":"/index.htm?user_seting"
  },
  {
   "type": "hr"
  }
 ]
}