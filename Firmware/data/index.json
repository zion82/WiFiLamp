{
 "configs": [
  "config.setup.json",
  "effect.json"
 ],
 "title": [
  {
   "type": "text",
   "title": "Главная"
  }
 ],
"class": "col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content": [
  {
   "type": "h5",
   "title": "{{SSDP}}",
   "class": "alert-warning",
   "style": "width:100%"
  },
  {
   "type": "checkbox",
   "design": "one big-size",
   "name": "Power",
   "style": "font-size:20px",
   "state": "{{Power}}",
   "action": "Power?Power=[[Power]]"
  },
  {
   "type": "hr"
  },
  {
   "type": "button",
   "title": "<<< <<<",
   "action": "eff?ef=0",
   "class": "btn btn-block btn-primary",
   "style": "width:20%;display:inline"
  },
  {
   "type": "select",
   "name": "eff_sel",
   "state": "{{eff_sel}}",
   "title": "effect.json",
   "style": "width:60%;display:inline",
   "action": "eff_sel?eff_sel=[[eff_sel]]"
  },
  {
   "type": "button",
   "title": ">>> >>>",
   "action": "eff?eff=1",
   "class": "btn btn-block btn-primary",
   "style": "width:20%;display:inline"
  },
  {
   "type": "hr"
  },
  {
   "type": "range",
   "name": "br",
   "title": "Яркость  {{br}}",
   "state": "{{br}}",
   "pattern": "min=1 max=255 step=1",
   "action": "br?br=[[br]]"  
  },
  {
   "type": "button",
   "title": "<",
   "action": "brm",
   "class": "btn btn-block btn-primary",
   "style": "width:10%;display:inline"
  },
{
   "type": "button",
   "title": ">",
   "action": "brp",
   "class": "btn btn-block btn-primary",
   "style": "width:10%;float:right"
  },
  {
   "type": "range",
   "name": "sp",
   "title": "Скорость  {{sp}}",
   "state": "{{sp}}",
   "pattern": "min=1 max=255 step=1",
   "action": "sp?sp=[[sp]]"
  },
  {
   "type": "button",
   "title": "<",
   "action": "spm",
   "class": "btn btn-block btn-primary",
   "style": "width:10%;display:inline"
  },
{
   "type": "button",
   "title": ">",
   "action": "spp",
   "class": "btn btn-block btn-primary",
   "style": "width:10%;float:right"
  },
  {
   "type": "range",
   "name": "sc",
   "title": "Масштаб / Цвет  {{sc}}",
   "state": "{{sc}}",
   "pattern": "min=1 max=100 step=1",
   "action": "sc?sc=[[sc]]"
  },
  {
   "type": "button",
   "title": "<",
   "action": "scm",
   "class": "btn btn-block btn-primary",
   "style": "width:10%;display:inline"
  },
{
   "type": "button",
   "title": ">",
   "action": "scp",
   "class": "btn btn-block btn-primary",
   "style": "width:10%;float:right"
  },
  {
   "type": "hr"
  },
  {
   "type": "link",
   "title": "Режим Цикл",
   "action": "/?cycle",
   "class": "btn btn-block btn-primary"
  },
  {
   "type": "hr"
  },
  {
 "type": "link",
   "title": "Настройки пользователя",
 "action": "/index.htm?user_seting",
    "class": "btn btn-block btn-success"
  }, 
  {
   "type": "link",
   "title": "Начальные установки",
   "action": "/index.htm?setup",
   "class": "btn btn-block btn-warning"
  }
 ]
}